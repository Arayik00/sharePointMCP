		// LOCAL DEVELOPMENT - Direct SharePoint Connection  
		"sharepoint-local": {
			"command": "node",
			"args": ["src/server.js", "mcp"],
			"env": {
				"SHP_ID_APP": "your-azure-app-id-here",
				"SHP_SITE_URL": "https://your-tenant.sharepoint.com/sites/your-site",
				"SHP_DOC_LIBRARY": "Shared Documents",
